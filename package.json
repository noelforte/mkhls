			"**/node_modules/**"
		],
		"parserOptions": {
			"ecmaVersion": "latest",
			"sourceType": "module"
		},
		"rules": {
			"eqeqeq": [
				"error",
				"smart"
			],
			"no-warning-comments": "off",
			"camelcase": [
				"error",
				{
					"properties": "never"
				}
			]
		}
