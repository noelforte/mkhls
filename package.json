{
	"name": "mkhls",
	"main": "mkhls.js",
	"type": "module",
	"author": {
		"name": "Noel Forte",
		"email": "noel@forte.is",
		"url": "https://forte.is/"
	},
	"bin": {
		"mkhls": "./bin/mkhls.js"
	},
	"packageManager": "pnpm@9.3.0",
	"version": "2.6.1",
	"dependencies": {
		"commander": "12.1.0",
		"kleur": "4.1.5",
		"sharp": "0.33.4"
	},
	"devDependencies": {
		"@types/node": "20.14.2",
		"eslint": "9.4.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-config-xo": "0.45.0"
	},
	"prettier": {
		"bracketSpacing": true,
		"arrowParens": "always",
		"singleQuote": true,
		"trailingComma": "es5",
		"useTabs": true
	},
	"eslintConfig": {
		"env": {
			"es2021": true,
			"node": true
		},
		"extends": [
			"xo",
			"prettier"
		],
		"overrides": [],
		"ignorePatterns": [
			"**/node_modules/**"
		],
		"parserOptions": {
			"ecmaVersion": "latest",
			"sourceType": "module"
		},
		"rules": {
			"eqeqeq": [
				"error",
				"smart"
			],
			"no-warning-comments": "off",
			"camelcase": [
				"error",
				{
					"properties": "never"
				}
			]
		}
	}
}
